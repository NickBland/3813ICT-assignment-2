{
    "include": ["src/**/*", "types/**/*", "test/**/*"],
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "ts-node": {
      "files": true
    }
}
